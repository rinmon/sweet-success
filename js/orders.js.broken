    },
    
    // æ³¨æ–‡ç”Ÿæˆã®é›£æ˜“åº¦èª¿æ•´ç”¨ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿
    difficulty: {
        minItems: 1,           // æœ€å°æ³¨æ–‡ã‚¢ã‚¤ãƒ†ãƒ ç¨®é¡æ•°
        maxItems: 3,           // æœ€å¤§æ³¨æ–‡ã‚¢ã‚¤ãƒ†ãƒ ç¨®é¡æ•°
        minQuantity: 1,        // æœ€å°æ³¨æ–‡æ•°é‡
        maxQuantity: 5,        // æœ€å¤§æ³¨æ–‡æ•°é‡
        baseTimeLimit: 120,    // åŸºæœ¬åˆ¶é™æ™‚é–“(ç§’) - è£½é€ é–“ã«åˆã†ã‚ˆã†å»¶é•·
        timeLimitVariance: 45, // åˆ¶é™æ™‚é–“ã®ã°ã‚‰ã¤ã(ç§’) - ãƒãƒªã‚¨ãƒ¼ã‚·ãƒ§ãƒ³ã‚‚å¢—åŠ 
        baseRewardMultiplier: 1.5, // åŸºæœ¬å ±é…¬å€ç‡
    },
    
    // æ³¨æ–‡ã®æœ€å¤§åŒæ™‚è¡¨ç¤ºæ•°
    maxActiveOrders: 3,
    
    // æ¬¡ã®æ³¨æ–‡ç”Ÿæˆã¾ã§ã®å¾…æ©Ÿæ™‚é–“(ç§’)
    nextOrderDelay: 30,
    
    // æ³¨æ–‡ç”Ÿæˆã‚¿ã‚¤ãƒãƒ¼
    orderTimer: null,
    
    // ã‚¯ãƒƒã‚­ãƒ¼åœ¨åº«å¤‰æ›´ç›£è¦–ãƒ•ãƒ©ã‚°
    _cookieChangeHandlerSet: false,
    
    // åˆæœŸåŒ–
    init: function() {
